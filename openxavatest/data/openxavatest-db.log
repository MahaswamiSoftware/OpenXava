/*C17*/SET SCHEMA PUBLIC
CREATE TRIGGER check_length_before_insert\u000aBEFORE INSERT ON XAVATEST.ARTICLE\u000aREFERENCING NEW ROW AS newrow\u000aFOR EACH ROW\u000aBEGIN ATOMIC\u000a    IF LENGTH(newrow.DESCRIPTION) < 5 THEN\u000a        SIGNAL SQLSTATE '45000' SET MESSAGE_TEXT = 'Description length must be at least 5';\u000a    END IF;\u000aEND
DISCONNECT
